{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "install",
            "type": "shell",
            "command": "forge install",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "fmt",
            "type": "shell",
            "command": "forge fmt --check",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "install",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "forge build --sizes",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "fmt",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "forge clean && forge cache clean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "build",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "forge test -vvv",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "lint",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "deploytransparentproxy",
            "type": "shell",
            "command": "forge script ./script/HappyCats.s.sol:HappyCatsScript --sig 'deployTransparentProxy()' --slow --broadcast --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --verify --verifier-url ${VERIFIER_URL} --etherscan-api-key ${ETHERSCAN_API_KEY}",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "TOKEN_ADMIN": "${PUBLIC_KEY}",
                    "TOKEN_MINTER": "${PUBLIC_KEY}",
                    "VERIFIER_URL": "https://api-sepolia.etherscan.io/api",
                }
            },
            "dependsOn": "test",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "upgradetransparentproxy",
            "type": "shell",
            "command": "forge script ./script/HappyCats.s.sol:HappyCatsScript --sig 'upgradeTransparentProxy()' --slow --broadcast --rpc-url ${RPC_URL} --private-key ${PRIVATE_KEY} --verify --verifier-url ${VERIFIER_URL} --etherscan-api-key ${ETHERSCAN_API_KEY}",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PROXY_ADMIN": "0xd9bf5f4C94dED9558f8385C90b4f372f709c1F4B",
                    "HAPPY_CATS_PROXY": "0x896d6e05a6b74E0D82660426e25b789003C404Fd",
                    "VERIFIER_URL": "https://api-sepolia.etherscan.io/api",
                }
            },
            "dependsOn": "test",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
    ]
}